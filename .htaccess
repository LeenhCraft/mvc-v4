Options -Indexes

<IfModule mod_rewrite.c>
    RewriteEngine On

    # Bloquear acceso directo a archivos/carpetas sensibles si el DocumentRoot apunta a la ra√≠z del proyecto
    RewriteRule ^\.env$ - [F,L]
    RewriteRule ^composer\.(json|lock)$ - [F,L]
    RewriteRule ^(vendor|app|config|routes|resources|storage)/ - [F,L]

    # Enviar todo a /public
    RewriteCond %{REQUEST_URI} !^/public/
    RewriteRule ^(.*)$ public/$1 [L]
</IfModule>
