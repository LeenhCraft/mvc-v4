# Configuración de la aplicación
APP_NAME="Windsurf MVC"
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:8080

# Configuración de la base de datos
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=windsurf_mvc
DB_USERNAME=root
DB_PASSWORD=

# Configuración de sesión
SESSION_NAME=windsurf_session
SESSION_SECRET=tu_clave_secreta_aqui
SESSION_SECURE=false

# Configuración de CSRF Protection
CSRF_ENABLED=true
# Rutas excluidas de validación CSRF (separadas por comas, soporta wildcards *)
# Ejemplo: /api/*,/webhook
CSRF_EXCLUDED_PATHS=/api/*

# Configuración de CORS
# Lista de orígenes permitidos separados por comas
# Usa '*' para permitir todos (NO RECOMENDADO EN PRODUCCIÓN)
# Ejemplos: https://example.com,https://app.example.com
# Soporta wildcards de subdominio: *.example.com
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOWED_METHODS="GET, POST, PUT, DELETE, PATCH, OPTIONS"
CORS_ALLOWED_HEADERS="X-Requested-With, Content-Type, Accept, Origin, Authorization"
CORS_MAX_AGE=86400
CORS_ALLOW_CREDENTIALS=false

# Configuración de Centinela (Request/Response Logging)
CENTINELA_ENABLED=true
CENTINELA_DIR=
CENTINELA_MAX_BODY_BYTES=16384
CENTINELA_OUTPUT=file
CENTINELA_REDACT_HEADERS=authorization,cookie,set-cookie
CENTINELA_REDACT_RESPONSE_HEADERS=set-cookie
CENTINELA_DB_ENABLED=false
CENTINELA_DB_TABLE=centinela_logs
CENTINELA_DB_AUTO_MIGRATE=false
