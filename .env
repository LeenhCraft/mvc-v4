# Configuración de la aplicación
APP_NAME="Windsurf MVC"
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:8080

# Configuración de la base de datos
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=db_mvc_leenh_v4
DB_USERNAME=root
DB_PASSWORD=321321

# Configuración de sesión
SESSION_NAME=windsurf_session
SESSION_SECRET=tu_clave_secreta_aqui
SESSION_SECURE=false

# Configuración de CSRF Protection
CSRF_ENABLED=true
CSRF_EXCLUDED_PATHS=/api/*

# Configuración de CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,http://windsurf-project.test
CORS_ALLOWED_METHODS="GET, POST, PUT, DELETE, PATCH, OPTIONS"
CORS_ALLOWED_HEADERS="X-Requested-With, Content-Type, Accept, Origin, Authorization"
CORS_MAX_AGE=86400
CORS_ALLOW_CREDENTIALS=false

# --- CENTINELA (DEV) ---
CENTINELA_ENABLED=true
# both para registrar en json y bd
# db para registrar solo en bd
# file para solo en json
CENTINELA_OUTPUT=both

# Archivos JSON
CENTINELA_DIR=
CENTINELA_MAX_BODY_BYTES=16384

# Redacción (request/response)
CENTINELA_REDACT_HEADERS=authorization,cookie,set-cookie
CENTINELA_REDACT_RESPONSE_HEADERS=set-cookie

# Base de datos
CENTINELA_DB_ENABLED=true
CENTINELA_DB_TABLE=centinela_logs
CENTINELA_DB_AUTO_MIGRATE=true